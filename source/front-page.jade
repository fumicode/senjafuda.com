extends layouts/basic-layout

block head
  include ./includes/head

block sidebar
  include ./includes/sidebar

block foot
  include ./includes/foot


block head_end

  - wp_enqueue_script("jquery")
  - wp_enqueue_script("slick", '//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js')
  - wp_enqueue_style("slickcss", '//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css')


block body_end
  script.

    jQuery(function(){
      jQuery('#homeSlider').slick({
        autoplay:true,
        autoplaySpeed:4000 //4秒
      });


    });

  
block content

  .contentLayout.--mainSub
    .contentLayout__main
      #homeSlider.homeSlider
        .homeSlider__slide
          a.homeSlider__link(href="")
            img.homeSlider__image(src="<?= get_stylesheet_directory_uri() ?>/images/slider_slide_1.jpg")

        .homeSlider__slide
          a.homeSlider__link(href="")
            img.homeSlider__image(src="<?= get_stylesheet_directory_uri() ?>/images/slider_slide_2.jpg")

    .contentLayout__sub
      div.contentBox
        h2.n 千社札とは？

        div.contentBox__content
          div.contentBox__image
            img(src="<?= get_stylesheet_directory_uri() ?>/images/what_is_senjafuda.jpg")    
          div.contentBox__desc 千社札と書いて「せんじゃふだ(せんしゃふだ)」と読みます。世の中の安泰と家内安全を願う千社参りの札を、略して千社札というようになったとされています。当店ではこの千社札をシール・ストラップ・名刺にして、銀座歌舞伎座の向かいで販売しています。


  div.contentBox.--green
    div.contentBox__title
      h2 当店の人気商品

    div.contentBox__content
      div.cardLists.--green
        :php
          $parent_id = get_page_by_title('人気商品')->ID;   
          $args = array( 
            'post_type' => 'page',
            'post_parent' => $parent_id,
                  );

          $the_query = new WP_Query( $args );

        - while($the_query->have_posts()) : $the_query->the_post()
          div.cardLists__card
            a(href="<?= get_the_permalink(); ?>")
              div.card
                h3.card__title <?= the_title(); ?>
                div.card__wrap
                  div.card__img
                    img(src="https://placehold.jp/400x300.png")
                  div.card__desc <?= the_content(); ?>
                div.card__price  <?= get_post_meta(get_the_ID(), 'price', true); ?>
                div.card__showMoreDetail 詳しく見る>>

        - endwhile;
    
  .contentBox.--red
    .contentBox__title
      h2 ご購入事例の紹介

    .contentBox__content
      div.cardLists.--red
        :php
          $parent_id = get_page_by_title('購入事例')->ID;   
          $args = array( 
            'post_type' => 'page',
            'post_parent' => $parent_id,
          );

          $the_query = new WP_Query( $args );  

        - while($the_query->have_posts()) : $the_query->the_post()

        div.cardLists__card
          div.card
            h3.card__title <?= the_title(); ?>
            div.card__wrap
              div.card__desc <?= the_content(); ?>
              div.card__img
                img(src="https://placehold.jp/400x300.png")
            
        - endwhile;

  div.contentBox.--blue
    div.contentBox__title
      h2 新着情報・メディア掲載

    .newsLists
      - while(have_posts()): the_post()
      div.newsLists__newsBox
        div.newsBox
          div.newsBox__img
            img(src="https://placehold.jp/50x120.png")
          div.newsBox__title <?= the_title(); ?>
      - endwhile;
      

  div.contentBox
    .contentBox__title
      h2  毎日更新！FaceBookやってます！
    div.contentBox__images
      div.images
        div.image
          img(src="https://placehold.jp/500x300.png")
        div.image
          img(src="https://placehold.jp/500x300.png")
    p.contentBox__desc--full Facebookに、お店に来てくださった外国人のお客様の写真をアッ プしております。
    div.contentBox__button
      a(href="") Facebook/senjafuda
    

    

  
